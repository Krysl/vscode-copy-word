{
  "name": "copy-word",
  "displayName": "Copy/Paste Word in Cursor",
  "description": "Cut/Copy/Paste the current word when there is no selection",
  "version": "3.7.0",
  "publisher": "alefragnani",
  "galleryBanner": {
    "color": "#0000FF",
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.61.0"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "icon": "images/icon.png",
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://github.com/alefragnani/vscode-copy-word/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/alefragnani/vscode-copy-word.git"
  },
  "bugs": {
    "url": "https://github.com/alefragnani/vscode-copy-word/issues"
  },
  "activationEvents": [
    "onCommand:copy-word.copy",
    "onCommand:copy-word.cut",
    "onCommand:copy-word.paste"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "copy-word.copy",
        "title": "Copy Word: Copy"
      },
      {
        "command": "copy-word.cut",
        "title": "Copy Word: Cut"
      },
      {
        "command": "copy-word.paste",
        "title": "Paste Word: Paste"
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "vscode-ext"
    ]
  },
  "scripts": {
    "build": "npm run compile && npm run -S esbuild-base -- --sourcemap",
    "watch": "tsc -p ./ -w",
    "vscode:prepublish": "npm run compile && npm run -S esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "lint": "eslint -c package.json --ext .ts src",
    "pretest": "npm run compile && npm run lint",
    "test-compile": "tsc -p ./",
    "just-test": "node ./out/src/test/runTest.js",
    "test": "npm run test-compile && npm run just-test",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node"
  },
  "dependencies": {
    "vscode-ext-selection": "1.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.27",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "esbuild": "^0.13.12",
    "eslint": "^8.1.0",
    "eslint-config-vscode-ext": "^1.1.0",
    "mocha": "^9.1.3",
    "typescript": "^4.6.2"
  }
}
